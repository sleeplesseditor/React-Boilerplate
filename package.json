{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Basic React Boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "clean": "rimraf dist node_modules",
    "start": "node ./dist/server.js",
    "test": "jest ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sleeplesseditor/React-Boilerplate.git"
  },
  "keywords": [
    "Node",
    "React"
  ],
  "author": "Josh Bryson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sleeplesseditor/React-Boilerplate/issues"
  },
  "homepage": "https://github.com/sleeplesseditor/React-Boilerplate#readme",
  "dependencies": {
    "express": "^4.16.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "react-test-renderer": "^16.2.0",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/enzyme.setup.js",
    "setupFiles": [
      "raf/polyfill"
    ]
  }
}
